generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  document String @unique
  email    String @unique
  password String
  type     String

  wallet Wallet?

  @@map("users")
}

model Wallet {
  id      String  @id @default(uuid())
  balance Decimal @default(0)

  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  transactionsSent     Transaction[] @relation("payer")
  transactionsReceived Transaction[] @relation("payee")

  @@map("wallets")
}

model Transaction {
  id        String   @id @default(uuid())
  value     Decimal
  createdAt DateTime @default(now())

  payerId String
  payer   Wallet @relation("payer", fields: [payerId], references: [id])

  payeeId String
  payee   Wallet @relation("payee", fields: [payeeId], references: [id])

  @@map("transactions")
}
